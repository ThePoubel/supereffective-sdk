{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "codegen": {
      "dependsOn": []
    },
    "lint": {
      "dependsOn": []
    },
    "lint-fix": {
      "dependsOn": []
    },
    "publint": {
      "dependsOn": ["^build", "build"]
    },
    "typelint": {
      "dependsOn": []
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
