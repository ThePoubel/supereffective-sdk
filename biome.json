{
  "$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["data/**/*", "package.json"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": {
          "level": "warn"
        }
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noChildrenProp": "error",
        "noPrecisionLoss": "warn"
      },
      "nursery": {
        "useGroupedTypeImport": "warn",
        "useHookAtTopLevel": "warn",
        "useExhaustiveDependencies": "warn",
        "noDuplicateJsonKeys": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentSize": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "lineWidth": 120,
      "indentSize": 2,
      "indentStyle": "space",
      "trailingComma": "all",
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "arrowParentheses": "always"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "lineWidth": 120,
      "indentSize": 2,
      "indentStyle": "space"
    }
  }
}
