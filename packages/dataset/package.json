{
  "name": "@supeffective/dataset",
  "version": "0.0.1",
  "description": "Dataset for supereffective.gg",
  "homepage": "https://github.com/itsjavi/supereffective-dataset#readme",
  "bugs": {
    "url": "https://github.com/itsjavi/supereffective-dataset/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/itsjavi/supereffective-dataset.git"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm import-data && pnpm minify-json && pnpm prettify",
    "import-data": "bun ./src/scripts/import.ts",
    "minify-json": "bun ./src/scripts/minify.ts ./data ./dist/data",
    "prettify": "cd ../.. && pnpm prettier --write ./packages/dataset/data",
    "typelint": "tsc --noEmit",
    "validate-data": "bun ./validate/validate.ts"
  },
  "dependencies": {
    "@supeffective/dataset-schemas": "workspace:*"
  },
  "devDependencies": {
    "@pkmn/dex": "^0.7.52",
    "@pkmn/dex-types": "^0.7.52",
    "@types/node": "^20.7.1",
    "glob": "^10.3.10",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "zod": "^3.22.2"
  }
}
