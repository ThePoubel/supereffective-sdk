{
  "name": "@supeffective/dataset",
  "version": "0.0.1",
  "description": "Dataset for supereffective.gg",
  "homepage": "https://github.com/itsjavi/supereffective-dataset#readme",
  "bugs": {
    "url": "https://github.com/itsjavi/supereffective-dataset/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/itsjavi/supereffective-dataset.git"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist && pnpm build:data && pnpm build:js && pnpm data:minify",
    "build:data": "pnpm data:gen && bun ./src/scripts/import.ts && pnpm data:gen",
    "build:js": "tsup",
    "data:gen": "pnpm data:join && pnpm data:legacy-gen",
    "data:join": "bun ./src/scripts/data-join.ts",
    "data:legacy-gen": "bun ./src/scripts/data-legacy-gen.ts",
    "data:minify": "bun ./src/scripts/minify.ts ./data/v2 ./dist/data",
    "data:split-v1": "bun ./src/scripts/data-split.ts",
    "dev": "tsup --watch --clean=false",
    "typelint": "tsc --noEmit",
    "validate-data": "bun ./src/validate/validate.ts"
  },
  "dependencies": {
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@pkmn/dex": "^0.7.52",
    "@pkmn/dex-types": "^0.7.52",
    "@types/node": "^20.7.2",
    "glob": "^10.3.10",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "zod": "^3.22.2"
  }
}
