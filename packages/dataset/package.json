{
  "name": "@supeffective/dataset",
  "version": "0.0.1",
  "description": "Dataset for supereffective.gg",
  "homepage": "https://github.com/itsjavi/supereffective-dataset#readme",
  "bugs": {
    "url": "https://github.com/itsjavi/supereffective-dataset/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/itsjavi/supereffective-dataset.git"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist && sleep 1 && pnpm build:lib && pnpm build:data",
    "build:data": "pnpm data:update && pnpm data:transform && pnpm data:format && pnpm data:validate",
    "build:lib": "tsup",
    "data:format": "bun ./src/scripts/data-format.ts && bun ./src/scripts/minify.ts ./data ./dist/data",
    "data:transform": "bun ./src/scripts/data-join.ts && bun ./src/scripts/data-legacy-gen.ts",
    "data:update": "bun ./src/scripts/import.ts",
    "data:validate": "bun ./src/validate/validate.ts",
    "dev": "tsup --watch --clean=false",
    "typelint": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@pkmn/dex": "^0.7.53",
    "@pkmn/dex-types": "^0.7.53",
    "@types/node": "^20.8.0",
    "glob": "^10.3.10",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "zod": "^3.22.2"
  }
}
