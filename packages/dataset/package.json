{
  "name": "@supeffective/dataset",
  "version": "0.3.0",
  "description": "Dataset for supereffective.gg",
  "homepage": "https://github.com/itsjavi/supereffective-dataset#readme",
  "bugs": {
    "url": "https://github.com/itsjavi/supereffective-dataset/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/itsjavi/supereffective-dataset.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./data/*": "./dist/data/*"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist && sleep 1 && pnpm build:lib && pnpm build:data",
    "build:data": "pnpm data:update && pnpm data:transform && pnpm data:format",
    "build:lib": "tsup",
    "data:format": "bun ./src/admin/scripts/data-format.ts && bun ./src/admin/scripts/minify.ts ./data ./dist/data",
    "data:transform": "bun ./src/admin/scripts/data-join.ts && bun ./src/admin/scripts/data-legacy-gen.ts",
    "data:update": "bun ./src/admin/scripts/import.ts",
    "dev": "tsup --watch --clean=false",
    "typelint": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@pkmn/dex": "^0.7.53",
    "@pkmn/dex-types": "^0.7.53",
    "@types/node": "^20.8.2",
    "glob": "^10.3.10",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}